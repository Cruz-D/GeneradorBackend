<Window x:Class="GeneradorBackend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generador Backend" Height="511" Width="638">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SolutionPathTextBox" Grid.Row="0" Margin="0,5,0,5" IsReadOnly="True"/>
        <Button Content="Seleccionar Ruta" Grid.Row="0" Margin="5,5,0,5" HorizontalAlignment="Right" Width="120" Click="SelectSolutionPath_Click"/>

        <TextBox x:Name="ConnectionStringTextBox" Grid.Row="1" Margin="0,5,0,5"/>
        <Button Content="Cargar Tablas" Grid.Row="1" Margin="5,5,0,5" HorizontalAlignment="Right" Width="120" Click="LoadTables_Click"/>
        <ComboBox x:Name="TablesComboBox" Grid.Row="2" Margin="10,5,0,75" Width="200" HorizontalAlignment="Left" SelectionChanged="TablesComboBox_SelectionChanged"/>
        <ComboBox x:Name="ClassesComboBox" IsReadOnly="True" Grid.Row="2" Margin="10,40,0,40" Width="200" HorizontalAlignment="Left" SelectionChanged="TablesComboBox_SelectionChanged"/>
        <TextBox x:Name="ModelTextBox_codigo" Background="IndianRed" Grid.Row="3" Margin="0,10,172,10" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Grid.RowSpan="2" TextChanged="ModelTextBox_TextChanged"/>
        <TextBox x:Name="ModelTextBox_carpetas" IsReadOnly="True" Background="LightGreen" Grid.Row="3" Margin="451,10,10,10" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Grid.RowSpan="2"/>
    </Grid>
</Window>
