<Window x:Class="GeneradorBackend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generador Backend" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SolutionPathTextBox" Grid.Row="0" Margin="0,5,0,5"/>
        <Button Content="Seleccionar Ruta" Grid.Row="0" Margin="5,5,0,5" HorizontalAlignment="Right" Width="120" Click="SelectSolutionPath_Click"/>

        <TextBox x:Name="ConnectionStringTextBox" Grid.Row="1" Margin="0,5,0,5"/>
        <Button Content="Cargar Tablas" Grid.Row="1" Margin="5,5,0,5" HorizontalAlignment="Right" Width="120" Click="LoadTables_Click"/>
        <ComboBox x:Name="TablesComboBox" Grid.Row="2" Margin="10,5,0,75" Width="200" HorizontalAlignment="Left" SelectionChanged="TablesComboBox_SelectionChanged"/>
        <ComboBox x:Name="ClassesComboBox" Grid.Row="2" Margin="0,5,10,75" Width="200" HorizontalAlignment="Right" SelectionChanged="TablesComboBox_SelectionChanged"/>
        <TextBox x:Name="ModelTextBox" Grid.Row="2" Margin="0,51,0,10" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Grid.RowSpan="3"/>
    </Grid>
</Window>
